{
  "id": "pext.module.weather",
  "name": "Weather",
  "developer": "Sylvia van Os (Pext lead developer)",
  "description": "Allows Pext to retrieve weather information from OpenWeatherMap",
  "homepage": "https://pext.hackerchick.me/",
  "license": "GPL-3.0+",
  "git_urls": [
    "https://github.com/Pext/pext_module_openweathermap"
  ],
  "bugtracker": "https://github.com/Pext/pext_module_openweathermap",
  "bugtracker_type": "github",
  "settings": [
    {
      "name": "unit",
      "description": "Preferred temperature unit",
      "options": [
        "°C",
        "°F"
